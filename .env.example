# AI Soccer Predictions Environment Configuration

# Application Settings
ENVIRONMENT=development
APP_SECRET=your_app_secret_here
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=sqlite:///./soccer_predictions.db
# For PostgreSQL: postgresql://user:password@localhost/soccer_predictions
# For MySQL: mysql://user:password@localhost/soccer_predictions

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# External API Keys
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
X_RAPIDAPI_KEY=your_rapidapi_key_here

# Betting Platform Credentials (for scraping)
HOLLYWOODBETS_PROXY=your_proxy_url_here
BETWAY_API_KEY=your_betway_api_key_here

# Model Training
MODEL_REGISTRY_URL=./models/trained_models
TRAINING_DATA_PATH=./data/training/
MODEL_CACHE_SIZE=10GB

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_here
API_KEYS=key1,key2,key3
ENCRYPTION_KEY=your_encryption_key_here

# Performance
MAX_CONCURRENT_PREDICTIONS=100
MAX_CONCURRENT_TRAINING=5
PREDICTION_TIMEOUT=30

# Feature Flags
ENABLE_SYNTHETIC_AI=true
ENABLE_STRATEGIC_AI=true
ENABLE_REAL_TIME_ODDS=true
ENABLE_MODEL_MONITORING=true

# Logging
LOG_FILE=./logs/soccer_predictions.log
LOG_RETENTION_DAYS=30
JSON_LOGGING=false

# Testing
TEST_DATABASE_URL=sqlite:///./test_soccer_predictions.db
TEST_API_KEY=test_api_key_123
